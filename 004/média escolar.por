programa {
	funcao inicio() {
		real n1
		real n2 
		real n3
		real n4
		real media
		
		escreva ("Digite a 1ª nota ")
		leia (n1)
		
		escreva ("Digite a 2ª nota ")
		leia (n2)
		
		escreva ("Digite a 3ª nota ")
		leia (n3)
		
		escreva ("Digite a 4ª nota ")
		leia (n4)
		
		media = (n1 + n2 + n3 + n4) /4
		
		escreva ("A média das notas é: ", media)
		
	}
}
